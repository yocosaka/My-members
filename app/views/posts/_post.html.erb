<article>
  <h3><%= link_to post.title, post_path(post) %></h3>
  <p><%= post.body %></p>

  <% if user_signed_in? %>
  <p>Posted by <%= gravatar_image_tag(post.user.email.gsub('spam', 'mdeering'), size: 15, alt: post.user.username, class: "thumb" ) %><%= post.user.username %></p>
  <% end %>
  <p>Posted <%= distance_of_time_in_words(post.created_at, Time.now) %> ago</p>
</article>
