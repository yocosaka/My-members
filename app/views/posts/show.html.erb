<div class="card">
  <div class="card-body">
    <h1 class="card-title"><%= @post.title %></h1>
    <h5 class="card-subtitle mb-2 text-muted">Posted by <%= gravatar_image_tag(@post.user.email.gsub('spam', 'mdeering'), size: 15, alt: @post.user.username, class: "thumb" ) %> <%= link_to  @post.user.username, user_path(@post.user) %></h5>
    <p class="card-text"><%= @post.body %></p>

    <p>Posted <%= distance_of_time_in_words(@post.created_at, Time.now) %> ago</p>
    <% if @post.user == current_user %>
      <%= link_to  "Edit this post", edit_post_path(@post), class: "btn btn-primary" %>
      <%= link_to  "Delete this post", post_path(@post), class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
