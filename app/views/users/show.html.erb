<h1><%= @user.username %></h1>
<%= gravatar_image_tag(@user.email.gsub('spam', 'mdeering'), size: 200, alt: @user.username, class: "pic" ) %>

<% if @user == current_user  %>
<ul>
  <li><%= link_to "Edit", edit_user_registration_path %></li>
  <li><%= link_to "Delete Account", user_registration_path, method: :delete, data: { confirm: 'Are you sure to delete you account?' } %></li>
</ul>
<% end %>

<% if @user.posts.any? %>
  <%= render partial: "posts/post", collection: @user.posts %>
<% end %>
